<?xml version="1.0" encoding="utf-8"?>
<Patch>
  <!-- Replace parent to remove equipment inheritance -->
  <Operation Class="PatchOperationAttributeSet">
    <xpath>Defs/ThingDef[defName="WoodLog"]</xpath>
    <attribute>ParentName</attribute>
    <value>ResourceBase</value>
  </Operation>
  <!-- Change vanilla wood texture to planks -->
  <Operation Class="PatchOperationReplace">
    <xpath>Defs/ThingDef[defName="WoodLog"]/graphicData/texPath</xpath>
    <value>
      <texPath>Things/Item/Resource/PE_WoodPlank</texPath>
    </value>
  </Operation>
  <!-- <Operation Class="PatchOperationReplace"> -->
  <!--   <xpath>Defs/ThingDef[defName="WoodLog"]/statBases/DeteriorationRate</xpath> -->
  <!--   <value> -->
  <!--     <DeteriorationRate>1.5</DeteriorationRate> -->
  <!--   </value> -->
  <!-- </Operation> -->
  <!-- change display name -->
  <Operation Class="PatchOperationReplace">
    <xpath>Defs/ThingDef[defName="WoodLog"]/label</xpath>
    <value>
      <label>lumber</label>
    </value>
  </Operation>
  <!-- Add wood color back to graphicData -->
  <Operation Class="PatchOperationAdd">
    <xpath>Defs/ThingDef[defName="WoodLog"]/graphicData</xpath>
    <value>
      <color>(139, 102, 71)</color>
    </value>
  </Operation>
  <!-- Ensure color is in stuffProps too -->
  <Operation Class="PatchOperationReplace">
    <xpath>Defs/ThingDef[defName="WoodLog"]/stuffProps/color</xpath>
    <value>
      <color>(139, 102, 71)</color>
    </value>
  </Operation>
  <!-- Add UI icon for fuel gauges and other UI elements -->
  <Operation Class="PatchOperationAdd">
    <xpath>Defs/ThingDef[defName="WoodLog"]</xpath>
    <value>
      <uiIconPath>Things/Item/Resource/PE_WoodPlank/WoodPlank_UIIcon</uiIconPath>
    </value>
  </Operation>
</Patch>
