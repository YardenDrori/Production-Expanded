<Defs>
  <RecipeDef>
    <defName>PE_ProcessFlaxToLinen</defName>
    <label>process raw flax into linen</label>
    <description>Process raw flax into linen suitable for use in fabrics.</description>
    <jobString>Processing linen.</jobString>
    <workSpeedStat>GeneralLaborSpeed</workSpeedStat>
    <effectWorking>Tailor</effectWorking>
    <soundWorking>Recipe_Tailor</soundWorking>
    <workAmount>140</workAmount>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>PE_RawFlax</li>
          </thingDefs>
        </filter>
        <count>1</count>
      </li>
    </ingredients>
    <products>
      <PE_Linen>1</PE_Linen>
    </products>
    <skillRequirements>
      <Crafting>0</Crafting>
    </skillRequirements>
    <recipeUsers>
      <li>HandTailoringBench</li>
      <li>CraftingSpot</li>
      <li>ElectricTailoringBench</li>
      <!-- <li>TableMachining</li> -->
    </recipeUsers>
    <displayPriority>4</displayPriority>
  </RecipeDef>
