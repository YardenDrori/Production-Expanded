  <!-- Process raw wood logs into lumber -->
  <RecipeDef>
    <defName>PE_ProcessCottonToCloth</defName>
    <label>process raw cotton into cloth</label>
    <description>Process raw cotton logs into cloth suitable for use in fabrics.</description>
    <jobString>Processing cloth.</jobString>
    <workSpeedStat>GeneralLaborSpeed</workSpeedStat>
    <effectWorking>Tailor</effectWorking>
    <soundWorking>Recipe_Tailor</soundWorking>
    <workAmount>140</workAmount>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>RawCotton</li>
          </thingDefs>
        </filter>
        <count>1</count>
      </li>
    </ingredients>
    <products>
      <Cloth>1</Cloth>
    </products>
    <skillRequirements>
      <Crafting>0</Crafting>
    </skillRequirements>
    <recipeUsers>
      <li>HandTailoringBench</li>
      <!-- <li>TableMachining</li> -->
    </recipeUsers>
    <displayPriority>900</displayPriority>
  </RecipeDef>
