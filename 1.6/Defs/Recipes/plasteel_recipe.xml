        </filter>
        <count>1</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <thingDefs>
        <li>PE_UnrefinedPlasteel</li>
      </thingDefs>
    </fixedIngredientFilter>
    <products>
      <Plasteel>1</Plasteel>
    </products>
    <modExtensions>
      <li Class="ProductionExpanded.RecipeExtension_Processor">
        <ticksPerItemOut>4000</ticksPerItemOut>
        <cycles>2</cycles>
        <capacityFactor>2</capacityFactor>
      </li>
    </modExtensions>
    <displayPriority>400</displayPriority>
  </RecipeDef>
</Defs>
