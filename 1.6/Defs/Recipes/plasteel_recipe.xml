<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <RecipeDef>
    <defName>PE_ForgePlasteelArcFurnace</defName>
    <label>refine plasteel</label>
    <description>Refine plasteel composite into pure plasteel.</description>
    <jobString>refining plasteel</jobString>
    <workAmount>500</workAmount>
    <recipeUsers>
      <li>PE_ArcFurnace</li>
    </recipeUsers>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>PE_UnrefinedPlasteel</li>
          </thingDefs>
        </filter>
        <count>1</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <thingDefs>
        <li>PE_UnrefinedPlasteel</li>
      </thingDefs>
    </fixedIngredientFilter>
    <products>
      <Plasteel>1</Plasteel>
    </products>
    <modExtensions>
      <li Class="ProductionExpanded.RecipeExtension_Processor">
        <ticksPerItemOut>1500</ticksPerItemOut>
        <cycles>2</cycles>
        <capacityFactor>2</capacityFactor>
      </li>
    </modExtensions>
    <displayPriority>400</displayPriority>
  </RecipeDef>
