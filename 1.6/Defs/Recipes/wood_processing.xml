<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <!-- Process raw wood logs into lumber -->
  <RecipeDef>
    <defName>PE_ProcessWoodToLumber</defName>
    <label>process wood into lumber</label>
    <description>Process raw wood logs into lumber planks suitable for construction.</description>
    <jobString>Processing wood.</jobString>
    <workSpeedStat>GeneralLaborSpeed</workSpeedStat>
    <effectWorking>Smelt</effectWorking>
    <soundWorking>Recipe_MakeBow</soundWorking>
    <workAmount>50</workAmount>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>WoodRaw</li>
          </thingDefs>
        </filter>
        <count>1</count>
      </li>
    </ingredients>
    <products>
      <WoodLog>1</WoodLog>
    </products>
    <skillRequirements>
      <Crafting>0</Crafting>
    </skillRequirements>
    <recipeUsers>
      <li>CraftingSpot</li>
      <li>TableMachining</li>
    </recipeUsers>
    <displayPriority>30</displayPriority>
  </RecipeDef>
  <!-- Bulk version -->
  <RecipeDef>
    <defName>PE_ProcessWoodToLumberBulk</defName>
    <label>process wood into lumber x4</label>
    <description>Process raw wood logs into lumber planks suitable for construction. This recipe produces four times the normal amount.</description>
    <jobString>Processing wood.</jobString>
    <workSpeedStat>GeneralLaborSpeed</workSpeedStat>
    <effectWorking>Smelt</effectWorking>
    <soundWorking>Recipe_MakeBow</soundWorking>
    <workAmount>500</workAmount>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>WoodRaw</li>
          </thingDefs>
        </filter>
        <count>10</count>
      </li>
    </ingredients>
    <products>
      <WoodLog>10</WoodLog>
    </products>
    <skillRequirements>
      <Crafting>1</Crafting>
    </skillRequirements>
    <recipeUsers>
      <li>CraftingSpot</li>
      <li>TableMachining</li>
    </recipeUsers>
    <displayPriority>29</displayPriority>
  </RecipeDef>
</Defs>
