<Defs>

  <!-- Alloy Furnaces -->
  <ThingDef ParentName="BenchBase">
    <defName>PE_FueledAlloyFurnace</defName>
    <label>alloy furnace</label>
    <description>A fueled furnace used for smelting metals and combining them into alloys.</description>
    <thingClass>Building_WorkTable</thingClass>
    <drawerType>MapMeshAndRealTime</drawerType>
    <graphicData>
      <texPath>Things/Building/Production/FueledSmithy</texPath>
      <graphicClass>Graphic_Multi</graphicClass>
      <shaderType>CutoutComplex</shaderType>
      <drawSize>(4,2)</drawSize>
      <shadowData>
        <volume>(2.8, 0.35, 0.59)</volume>
        <offset>(0, 0, 0.08)</offset>
      </shadowData>
      <damageData>
        <cornerTL>Damage/Corner</cornerTL>
        <cornerTR>Damage/Corner</cornerTR>
        <cornerBL>Damage/Corner</cornerBL>
        <cornerBR>Damage/Corner</cornerBR>
      </damageData>
    </graphicData>
    <stuffCategories>
      <li>Stony</li>
    </stuffCategories>
    <costStuffCount>150</costStuffCount>
    <altitudeLayer>Building</altitudeLayer>
    <fillPercent>0.5</fillPercent>
    <useHitPoints>True</useHitPoints>
    <statBases>
      <WorkToBuild>3000</WorkToBuild>
      <MaxHitPoints>180</MaxHitPoints>
      <Flammability>1.0</Flammability>
      <Cleanliness>-3</Cleanliness>
    </statBases>
    <size>(3,1)</size>
    <designationCategory>Production</designationCategory>
    <uiOrder>2500</uiOrder>
    <passability>PassThroughOnly</passability>
    <pathCost>50</pathCost>
    <hasInteractionCell>True</hasInteractionCell>
    <interactionCellOffset>(0,0,-1)</interactionCellOffset>
    <surfaceType>Item</surfaceType>
    <constructionSkillPrerequisite>4</constructionSkillPrerequisite>
    <inspectorTabs>
      <li>ITab_Bills</li>
    </inspectorTabs>
    <building>
      <spawnedConceptLearnOpportunity>BillsTab</spawnedConceptLearnOpportunity>
    </building>
    <comps>
      <li Class="CompProperties_Refuelable">
        <fuelConsumptionRate>85.0</fuelConsumptionRate>
        <fuelCapacity>75.0</fuelCapacity>
        <fuelFilter>
          <thingDefs>
            <li>WoodLog</li>
          </thingDefs>
        </fuelFilter>
        <consumeFuelOnlyWhenUsed>true</consumeFuelOnlyWhenUsed>
        <showAllowAutoRefuelToggle>true</showAllowAutoRefuelToggle>
      </li>
      <li Class="CompProperties_Glower">
        <glowRadius>3</glowRadius>
        <glowColor>(217,112,33,0)</glowColor>
      </li>
      <li Class="CompProperties_AffectedByFacilities">
        <linkableFacilities>
          <li>ToolCabinet</li>
        </linkableFacilities>
      </li>
    </comps>
    <placeWorkers>
      <li>PlaceWorker_ShowFacilitiesConnections</li>
      <li>PlaceWorker_PreventInteractionSpotOverlap</li>
    </placeWorkers>
    <researchPrerequisites>
      <li>Smithing</li>
    </researchPrerequisites>
  </ThingDef>


  <!-- Metal Working -->
  <ThingDef ParentName="BuildingBase">
    <defName>DankPyon_BlastFurnace</defName>
    <label>blast furnace</label>
    <description>A large blast furnace used to refine scrap and raw resources. Generates strong
      heat.</description>
    <thingClass>Building_WorkTable</thingClass>
    <drawerType>MapMeshAndRealTime</drawerType>
    <graphicData>
      <texPath>Things/Building/Production/BlastFurnace/BlastFurnace</texPath>
      <graphicClass>Graphic_Multi</graphicClass>
      <shaderType>CutoutComplex</shaderType>
      <drawSize>(5,4)</drawSize>
      <damageData>
        <cornerTL>Damage/Corner</cornerTL>
        <cornerTR>Damage/Corner</cornerTR>
        <cornerBL>Damage/Corner</cornerBL>
        <cornerBR>Damage/Corner</cornerBR>
      </damageData>
    </graphicData>
    <uiIconPath>Things/Building/Production/BlastFurnace/BlastFurnace</uiIconPath>
    <costList>
      <Steel>250</Steel>
      <ComponentIndustrial>6</ComponentIndustrial>
    </costList>
    <altitudeLayer>BuildingOnTop</altitudeLayer>
    <fillPercent>1.0</fillPercent>
    <useHitPoints>True</useHitPoints>
    <statBases>
      <WorkToBuild>6000</WorkToBuild>
      <MaxHitPoints>500</MaxHitPoints>
      <Cleanliness>-30</Cleanliness>
      <Beauty>-20</Beauty>
    </statBases>
    <size>(3,2)</size>
    <designationCategory>Production</designationCategory>
    <passability>PassThroughOnly</passability>
    <pathCost>50</pathCost>
    <hasInteractionCell>True</hasInteractionCell>
    <interactionCellOffset>(0,0,2)</interactionCellOffset>
    <defaultPlacingRot>South</defaultPlacingRot>
    <surfaceType>Item</surfaceType>
    <comps Inherit="false">
      <li Class="ProcessorFramework.CompProperties_Processor">
        <capacity>500</capacity>
        <independentProcesses>false</independentProcesses>
        <parallelProcesses>false</parallelProcesses>
        <dropIngredients>true</dropIngredients>
        <showProductIcon>true</showProductIcon>
        <barOffset>(0.0, 0.25)</barOffset>
        <barScale>(1.0, 1.0)</barScale>
        <colorCoded>false</colorCoded>
        <processes>
          <li>DankPyon_SmeltingOre_Iron_Industrial</li>
          <li>DankPyon_SmeltingOre_Steel_Industrial</li>
          <li>DankPyon_SmeltingOre_Silver_Industrial</li>
          <li>DankPyon_SmeltingOre_Gold_Industrial</li>
          <li>DankPyon_SmeltingOre_Plasteel_Industrial</li>
          <li>DankPyon_SmeltingOre_Scrap_Industrial</li>
        </processes>
      </li>
      <li Class="CompProperties_Forbiddable" />
      <li Class="CompProperties_Glower">
        <glowRadius>6</glowRadius>
        <glowColor>(247,172,65,0)</glowColor>
      </li>
      <li Class="CompProperties_HeatPusher">
        <compClass>CompHeatPusherPowered</compClass>
        <heatPerSecond>20</heatPerSecond>
      </li>
      <li Class="CompProperties_Power">
        <compClass>CompPowerTrader</compClass>
        <basePowerConsumption>900</basePowerConsumption>
        <idlePowerConsumption>50</idlePowerConsumption>
        <shortCircuitInRain>true</shortCircuitInRain>
      </li>
      <li Class="CompProperties_Flickable" />
      <li Class="CompProperties_AffectedByFacilities">
        <linkableFacilities>
          <li>ToolCabinet</li>
        </linkableFacilities>
      </li>
    </comps>
    <tickerType>Rare</tickerType>
    <placeWorkers>
      <li>PlaceWorker_PreventInteractionSpotOverlap</li>
    </placeWorkers>
    <techLevel>Industrial</techLevel>
    <researchPrerequisites>
      <li>Electricity</li>
      <li>Machining</li>
    </researchPrerequisites>
  </ThingDef>

</Defs>
